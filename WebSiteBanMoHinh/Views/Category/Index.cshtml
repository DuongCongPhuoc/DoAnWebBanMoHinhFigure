@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<ProductModel>
@using WebSiteBanMoHinh.Resources;
@inject LanguageService ShareLocallizer
<div class="col-sm-3">
    @Html.Partial("_SidebarPartial")
</div>

<style>
    .product-image-wrapper {
        background-color: white;
        border: 2px solid #e6b800;
        border-radius: 15px;
        padding: 15px;
        position: relative;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 520px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-shadow: 0 4px 15px rgba(230, 184, 0, 0.2);
    }

        .product-image-wrapper:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(230, 184, 0, 0.4);
        }

    .productinfo {
        text-align: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px 0;
    }

    .image-container {
        position: relative;
        overflow: hidden;
        height: 260px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .productinfo img {
        max-height: 260px;
        max-width: 100%;
        object-fit: contain;
        border-radius: 10px;
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .productinfo .quick-view {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #e6b800;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        opacity: 0;
        transition: opacity 0.3s ease;
        font-size: 0.9em;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 5px;
        text-transform: uppercase;
    }

    .image-container:hover img {
        opacity: 0.7;
        transform: scale(1.05);
    }

    .image-container:hover .quick-view {
        opacity: 1;
    }

    .productinfo .product-name {
        font-size: 1.1em;
        font-weight: 700;
        font-family: 'Roboto', sans-serif;
        color: #2c3e50;
        margin: 10px 0;
        line-height: 1.3;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .productinfo h2 {
        margin: 5px 0;
    }

    .productinfo .price {
        color: #e6b800;
        font-weight: 700;
        font-size: 1.2em;
    }

    .add-to-cart, .add-to-wishlist, .add-to-compare {
        background-color: #e6b800;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 25px;
        transition: all 0.3s ease;
        width: 100%;
        margin: 5px 0;
        font-size: 0.9em;
        font-weight: 600;
        text-transform: uppercase;
    }

        .add-to-cart:hover {
            background-color: #cc9900;
        }

    .add-to-wishlist {
        background-color: #ff4d4d;
    }

        .add-to-wishlist:hover {
            background-color: #e63939;
        }

    .add-to-compare {
        background-color: #0084ff;
    }

        .add-to-compare:hover {
            background-color: #006cd1;
        }

    .features_items {
        padding-top: 20px;
    }

    .section-title {
        font-family: 'Roboto', sans-serif;
        color: #e6b800;
        font-size: 2em;
        text-transform: uppercase;
        text-shadow: 2px 2px 4px rgba(230, 184, 0, 0.3);
        margin-bottom: 20px;
    }
</style>

<div class="col-sm-9 padding-right">
    <partial name="_FilterProductsPartial" />
    <div class="features_items">
        <h2 class="section-title">@ShareLocallizer.GetLocalizedHTML("Features Items")</h2>
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo">
                            <div class="image-container">
                                <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
                                    <img src="~/media/products/@item.Image" alt="@item.Name" />
                                    <div class="quick-view">
                                        <i class="fa fa-eye"></i> @ShareLocallizer.GetLocalizedHTML("Quick View")
                                    </div>
                                </a>
                            </div>
                            <p class="product-name">@item.Name</p>
                            <h2>
                                <span class="price">@item.Price.ToString("#,##0")₫</span>
                            </h2>
                            @if (item.Quantity > 0)
                            {
                                <button class="btn btn-default add-to-cart" data-product_id="@item.Id">
                                    <i class="fa fa-shopping-cart"></i> @ShareLocallizer.GetLocalizedHTML("Add to Cart")
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-default" disabled>
                                    <i class="fa fa-shopping-cart"></i> @ShareLocallizer.GetLocalizedHTML("Sold out")
                                </button>
                            }
                            <button class="btn btn-default add-to-wishlist add-btn-wishlist" data-product_id="@item.Id">
                                <i class="fas fa-heart"></i> @ShareLocallizer.GetLocalizedHTML("Add to Wishlist")
                            </button>
                            <button class="btn btn-default add-to-compare add-btn-compare" data-product_id="@item.Id">
                                <i class="fas fa-balance-scale"></i> @ShareLocallizer.GetLocalizedHTML("Add to Compare")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div><!--features_items-->
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.7.1/nouislider.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.7.1/nouislider.min.css" />
    <script>
        $(document).ready(function () {
            // Khởi tạo noUISlider
            var slider = document.getElementById('price-slider');
            var amount = document.getElementById('amount');

            noUiSlider.create(slider, {
                start: [100000, 5000000],
                connect: true,
                step: 100000,
                range: {
                    'min': 100000,
                    'max': 5000000
                },
                format: {
                    to: function (value) {
                        return new Intl.NumberFormat('vn-VN', { style: 'currency', currency: 'VND' }).format(value);
                    },
                    from: function (value) {
                        return Number(value.replace(/[^0-9.-]+/g, ""));
                    }
                }
            });

            // Cập nhật giá trị hiển thị
            slider.noUiSlider.on('update', function (values) {
                amount.value = values[0] + ' - ' + values[1];
            });

            // Xử lý nút lọc giá
            $('.btn-locgia').on('click', function () {
                var url = $(this).data("current_url");
                var values = slider.noUiSlider.get(true); // Lấy giá trị số
                if (url) {
                    window.location = url + "?startprice=" + values[0] + "&endprice=" + values[1];
                }
            });

            // Xử lý sắp xếp
            $('#sort_by').on('change', function () {
                var url = $(this).val();
                if (url) {
                    window.location = url;
                }
            });

            // Add to Cart
            $('.add-to-cart').click(function (e) {
                e.preventDefault();
                var Id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Add", "Cart")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                title: "Thành công!",
                                text: "@ShareLocallizer.GetLocalizedHTML("Add Item to cart successfully")",
                                icon: "success",
                                confirmButtonText: "OK",
                                background: "#fff0f5",
                                color: "#2c3e50",
                                confirmButtonColor: "#e6b800"
                            });
                        }
                    },
                    error: function () {
                        Swal.fire("Đã xảy ra lỗi khi thêm vào giỏ hàng!");
                    }
                });
            });

            // Add to Wishlist
            $('.add-btn-wishlist').click(function (e) {
                e.preventDefault();
                var Id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddWishList", "Home")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                title: "Thành công!",
                                text: "@ShareLocallizer.GetLocalizedHTML("Added to Wishlist successfully")",
                                icon: "success",
                                confirmButtonText: "OK",
                                background: "#fff0f5",
                                color: "#2c3e50",
                                confirmButtonColor: "#ff4d4d"
                            });
                        }
                    },
                    error: function () {
                        Swal.fire("Đã xảy ra lỗi khi thêm vào danh sách yêu thích!");
                    }
                });
            });

            // Add to Compare
            $('.add-btn-compare').click(function (e) {
                e.preventDefault();
                var Id = $(this).data("product_id");
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddCompare", "Home")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                title: "Thành công!",
                                text: "@ShareLocallizer.GetLocalizedHTML("Added to Compare successfully")",
                                icon: "success",
                                confirmButtonText: "OK",
                                background: "#fff0f5",
                                color: "#2c3e50",
                                confirmButtonColor: "#0084ff"
                            });
                        }
                    },
                    error: function () {
                        Swal.fire("Đã xảy ra lỗi khi thêm vào danh sách so sánh!");
                    }
                });
            });
        });
    </script>
}